<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane prefHeight="600.0" prefWidth="800.0" styleClass="marker-1--button" stylesheets="@static/css/application.css" xmlns="http://javafx.com/javafx/8.0.121" xmlns:fx="http://javafx.com/fxml/1" fx:controller="root.app.fx.controllers.MainController">
    <bottom>
        <HBox alignment="CENTER" BorderPane.alignment="TOP_RIGHT">
            <Button fx:id="cameraButton" alignment="center" onAction="#startCamera" text="Start camera">
                <HBox.margin>
                    <Insets right="10.0" />
                </HBox.margin>
            </Button>
            <Button fx:id="videoButton" alignment="center" onAction="#startVideo" text="Start video">
                <HBox.margin>
                    <Insets left="10.0" right="10.0" />
                </HBox.margin>
                <opaqueInsets>
                    <Insets right="15.0" />
                </opaqueInsets>
            </Button>
            <Button fx:id="chooseFileBtn" alignment="center" layoutX="313.0" layoutY="10.0" onAction="#chooseFile" text="choose file">
                <opaqueInsets>
                    <Insets />
                </opaqueInsets>
                <HBox.margin>
                    <Insets left="15.0" />
                </HBox.margin>
            </Button>
        </HBox>
    </bottom>
    <center>
        <AnchorPane fx:id="imageWrapperPane" prefHeight="600.0" prefWidth="800.0" BorderPane.alignment="CENTER">
            <ImageView fx:id="imageView" preserveRatio="true" smooth="false" styleClass="imageView" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0" />
        </AnchorPane>

    </center>
    <right>
        <VBox prefHeight="426.0" prefWidth="225.0" BorderPane.alignment="CENTER">
            <HBox alignment="TOP_CENTER" prefWidth="125.0" BorderPane.alignment="CENTER">
                <Button onAction="#addAnchors" text="Добавить">
                    <HBox.margin>
                        <Insets right="5.0" />
                    </HBox.margin>
                </Button>
                <Button onAction="#submitZone" text="Сохранить">
                    <HBox.margin>
                        <Insets right="5.0" />
                    </HBox.margin>
                </Button>
                <VBox.margin>
                    <Insets bottom="15.0" top="15.0" />
                </VBox.margin>
            </HBox>
            <HBox alignment="TOP_CENTER" prefWidth="125.0" BorderPane.alignment="CENTER">
                <Button onAction="#cleanAnchors" text="Очистить">
                    <HBox.margin>
                        <Insets right="5.0" />
                    </HBox.margin>
                </Button>
                <Button onAction="#refresh" text="Обновить">
                    <HBox.margin>
                        <Insets right="5.0" />
                    </HBox.margin>
                </Button>
                <VBox.margin>
                    <Insets bottom="5.0" top="5.0" />
                </VBox.margin>

            </HBox>
            <HBox alignment="TOP_CENTER" layoutX="10.0" layoutY="139.0" prefHeight="200" prefWidth="125.0">
                <TableView fx:id="tableLines" editable="true">
                    <columns>
                        <!-- Колонки таблицы -->
                        <TableColumn fx:id="idColumn" editable="false" prefWidth="55.0" text="id" />
                        <TableColumn fx:id="distanceColumn" prefWidth="55.0" text="метров" />
                        <TableColumn fx:id="wayNum" prefWidth="55.0" text="полоса" />
                        <TableColumn fx:id="delButton" editable="false" prefWidth="30.0" text="del" />
                    </columns>
                </TableView>
            </HBox>
            <HBox prefWidth="200.0">
                <VBox.margin>
                    <Insets bottom="10.0" top="10.0" />
                </VBox.margin>
                <Label text="Длинна">
                    <HBox.margin>
                        <Insets left="10.0" right="10.0" />
                    </HBox.margin>
                </Label>
                <TextField fx:id="zoneHeightValue" maxWidth="25.0" onAction="#saveFirstZoneHeight">
                    <HBox.margin>
                        <Insets left="30.0" right="10.0" />
                    </HBox.margin>
                </TextField>
                <Button fx:id="zoneHeightButton" mnemonicParsing="false" text="save" onAction="#saveFirstZoneHeight">
                    <HBox.margin>
                        <Insets left="10.0" right="10.0" />
                    </HBox.margin>
                </Button>
            </HBox>
            <HBox prefWidth="200.0">
                <VBox.margin>
                    <Insets bottom="10.0" top="10.0" />
                </VBox.margin>
                <Label text="Зон">
                    <HBox.margin>
                        <Insets left="10.0" right="10.0" />
                    </HBox.margin>
                </Label>
                <TextField fx:id="zonesPerLineAmount" maxWidth="25.0" onAction="#saveZonesPerLine">
                    <HBox.margin>
                        <Insets left="25.0" right="10.0" />
                    </HBox.margin>
                </TextField>
                <Button fx:id="saveZonesPerLineAmount" mnemonicParsing="false" text="save" onAction="#saveZonesPerLine">
                    <HBox.margin>
                        <Insets left="10.0" right="10.0" />
                    </HBox.margin>
                </Button>
            </HBox>
            <HBox prefWidth="200.0">
                <VBox.margin>
                    <Insets bottom="10.0" top="10.0" />
                </VBox.margin>
                <Label text="IP:">
                    <HBox.margin>
                        <Insets left="10.0" right="10.0" />
                    </HBox.margin>
                </Label>
                <TextField fx:id="ipInput" maxWidth="90.0" onAction="#saveIpAction">
                    <HBox.margin>
                        <Insets left="30.0" right="10.0" />
                    </HBox.margin>
                </TextField>
                <Button fx:id="saveIpButton" mnemonicParsing="false" text="save" onAction="#saveIpAction">
                    <HBox.margin>
                        <Insets left="10.0" right="10.0" />
                    </HBox.margin>
                </Button>
            </HBox>

        </VBox>
    </right>
</BorderPane>
